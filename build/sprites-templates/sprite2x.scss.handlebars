.sprite2x{
	display:inline-block;
	overflow: hidden;
	background-repeat: no-repeat;
	background-image: url('../img/2x/{{spritesheet.escaped_image}}');
	background-size: {{spritesheet.px.width}}/2 {{spritesheet.px.height}}/2;
}

{{#sprites}}
.sprite2x-{{name}}{ 
	@extend .sprite2x;
	width: {{px.width}}/2; 
	height: {{px.height}}/2; 
	background-position: {{px.offset_x}}/2 {{px.offset_y}}/2;
}

{{/sprites}}